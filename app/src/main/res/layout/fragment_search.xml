<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.SearchFragment"
    android:background="#808080">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--info-->
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_symbol_compound"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_detail_element_textview"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:padding="4dp"
                    android:paddingTop="4dp"
                    android:text="HCl"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_name_compound"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_detail_element_textview"
                    android:fontFamily="sans-serif-thin"
                    android:padding="4dp"
                    android:paddingTop="4dp"
                    android:text="Tên: Axit clohydric"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_weight_compound"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_detail_element_textview"
                    android:fontFamily="sans-serif-thin"
                    android:padding="4dp"
                    android:paddingTop="4dp"
                    android:text="Khối lượng: 36.5 g/mol"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_status_compound"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_detail_element_textview"
                    android:fontFamily="sans-serif-thin"
                    android:padding="4dp"
                    android:paddingTop="4dp"
                    android:text="Trạng thái: Chất lỏng"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_color_compound"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-thin"
                    android:padding="4dp"
                    android:paddingTop="4dp"
                    android:text="Màu sắc: Trong suốt"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:textStyle="bold" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <!--được tạo thành-->
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-thin"
                    android:padding="4dp"
                    android:paddingTop="4dp"
                    android:text="Được tạo thành từ: "
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:textStyle="bold" />


                <!--item-->
                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/liquid"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="5dp"
                    app:cardUseCompatPadding="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-thin"
                        android:padding="4dp"
                        android:paddingTop="4dp"
                        android:text="H2"
                        android:textColor="#000"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/liquid"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="5dp"
                    app:cardUseCompatPadding="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-thin"
                        android:padding="4dp"
                        android:paddingTop="4dp"
                        android:text="Cl2"
                        android:textColor="#000"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/liquid"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="5dp"
                    app:cardUseCompatPadding="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-thin"
                        android:padding="4dp"
                        android:paddingTop="4dp"
                        android:text="NaCl"
                        android:textColor="#000"
                        android:textSize="20dp"
                        android:textStyle="bold" />
                </android.support.v7.widget.CardView>


            </LinearLayout>

        </android.support.v7.widget.CardView>

        <!--phuong trinh tao ra-->
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_detail_element_textview"
                    android:fontFamily="sans-serif-thin"
                    android:padding="4dp"
                    android:paddingTop="4dp"
                    android:text="H2 + Cl2 → 2 HCl"
                    android:textColor="#000"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:background="@drawable/background_detail_element_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-thin"
                    android:padding="4dp"
                    android:paddingTop="4dp"
                    android:text="NaCl + H2SO4 đặc → NaHSO4 + HCl↑"
                    android:textColor="#000"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-thin"
                    android:padding="4dp"
                    android:paddingTop="4dp"
                    android:text="2FeCl3 + 6H2O → Fe2O3 + 3H2O + 6HCl"
                    android:textColor="#000"
                    android:textSize="16dp"
                    android:textStyle="bold" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <!--tính chất hóa học-->
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:padding="4dp"
                    android:paddingTop="4dp"
                    android:text="Tính chất hóa học:"
                    android:background="@drawable/background_detail_element_textview"
                    android:textColor="#000"
                    android:textSize="20dp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-thin"
                    android:padding="4dp"
                    android:paddingTop="4dp"
                    android:text=" + tác dụng với kim loại"
                    android:textColor="#000"
                    android:textSize="16dp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_marginRight="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-thin"
                    android:padding="4dp"
                    android:paddingTop="4dp"
                    android:gravity="right"
                    android:text="Fe + 2HCl → FeCl2+ H2"
                    android:textColor="#000"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:background="@drawable/background_detail_element_textview"/>
                <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-thin"
                android:padding="4dp"
                android:paddingTop="4dp"
                android:text=" + tác dụng với oxit bazơ"
                android:textColor="#000"
                android:textSize="16dp"
                android:textStyle="bold" />
                <TextView
                    android:layout_marginRight="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-thin"
                    android:padding="4dp"
                    android:paddingTop="4dp"
                    android:gravity="right"
                    android:text="ZnO + 2HCl → ZnCl2 + H2O"
                    android:textColor="#000"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:background="@drawable/background_detail_element_textview"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-thin"
                    android:padding="4dp"
                    android:paddingTop="4dp"
                    android:text=" + tác dụng với bazơ"
                    android:textColor="#000"
                    android:textSize="16dp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_marginRight="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-thin"
                    android:padding="4dp"
                    android:paddingTop="4dp"
                    android:gravity="right"
                    android:text="NaOH + HCl → NaCl + H2O"
                    android:textColor="#000"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:background="@drawable/background_detail_element_textview"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-thin"
                    android:padding="4dp"
                    android:paddingTop="4dp"
                    android:text=" + tác dụng với muối"
                    android:textColor="#000"
                    android:textSize="16dp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_marginRight="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-thin"
                    android:padding="4dp"
                    android:paddingTop="4dp"
                    android:gravity="right"
                    android:text="CaCO3 + 2HCl → CaCl2 + CO2 + H2O"
                    android:textColor="#000"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:background="@drawable/background_detail_element_textview"/>


            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</ScrollView>